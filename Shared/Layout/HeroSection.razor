@namespace Embyte.Shared.Layout
@using Embyte.Shared.BaseUI.Buttons

<div class="w-screen flex justify-center mb-10">
    <div class="max-w-7xl md:grid grid-rows-2 md:grid-rows-1 md:grid-cols-2 gap-2 md:gap-4 mx-8 mb-20" style="min-height: 80vh;">
        <div class="flex items-center justify-center mb-10 md:mb-0 max-w-xl">
            <div>
                <h1 class="text-2xl md:text-5xl text-b600 text-white mb-4 text-center md:text-left">
                    @title
                </h1>
                <p class="md:text-lg mb-4 text-center md:text-left">
                    @description
                </p>
                <div class="flex justify-center md:justify-start">
                    <PrimaryLinkBtn link=@actionLink t=@actionText />
                </div>
            </div>
        </div>
        <div class="w-full h-full bg-cover bg-contain bg-no-repeat bg-center md:m-3 rounded-3xl flex justify-center items-center" style="background-image: url('@imageLoc');">
            <div>
                @ChildContent
            </div>
        </div>
    </div>
</div>



@code {
    [Parameter]
    public RenderFragment ChildContent { get; set; } = default!;
    [Parameter]
    public string title { get; set; } = default!;
    [Parameter]
    public string description { get; set; } = default!;
    [Parameter]
    public string imageLoc { get; set; } = default!;
    [Parameter]
    public string actionText { get; set; } = default!;
    [Parameter]
    public string actionLink { get; set; } = default!;
}